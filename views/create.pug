doctype html
html
  head
    title Create a Product
    style.
      /* Add CSS styling here */
      body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
        margin: 0;
        padding: 0;
      }
      .container {
        max-width: 400px;
        margin: 50px auto;
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }
      h1 {
        text-align: center;
        color: #333;
      }
      label {
        display: block;
        margin-bottom: 0.5rem;
      }
      input, select {
        width: 100%;
        padding: 0.5rem;
        margin-bottom: 1rem;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box; /* Ensure padding and border are included in width */
      }
      button {
        background-color: #4CAF50;
        color: white;
        padding: 0.5rem 1rem;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        display: block;
        width: 100%;
      }
  body
    .container
      h1 Create a Product

      form(action="/product/create" method="POST")
        label(for="name") Name:
        input(type="text" name="name" id="name" required)

        label(for="price") Price:
        input(type="number" name="price" id="price" required)

        label(for="category") Category:
        select(name="category" id="category" required)
          option(value="T-shirts") T-shirts
          option(value="Shorts") Shorts
          option(value="Shoes") Shoes
          option(value="Sweatshirts") Sweatshirts
          option(value="Pants") Pants
          option(value="Pajamas") Pajamas

        button(type="submit") Create Product
